<UserControl
    x:Class="Diiagramr.Diagram.Interactors.DiagramInteractionManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interacters="clr-namespace:DiiagramrAPI.Diagram.Interactors;assembly=DiiagramrAPI"
    xmlns:s="https://github.com/canton7/Stylet">
    <UserControl.Resources>
        <ResourceDictionary>
            <ItemsPanelTemplate x:Key="CanvasItemsPanelTemplate">
                <Canvas />
            </ItemsPanelTemplate>

            <ItemsPanelTemplate x:Key="StackItemsPanelTemplate">
                <StackPanel />
            </ItemsPanelTemplate>

            <BooleanToVisibilityConverter x:Key="Btv" />

            <Style x:Key="DiagramInteractorPresenterStyle" TargetType="ContentPresenter">
                <Setter Property="Canvas.Left" Value="{Binding X}" />
                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate DataType="{x:Type interacters:DiagramInteractor}">
                            <ContentControl
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                s:View.Model="{Binding}"
                                IsTabStop="False" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DiagramInteractorNamePresenterStyle" TargetType="ContentPresenter">
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate DataType="{x:Type interacters:DiagramInteractor}">
                            <Label
                                Background="Black"
                                Content="{Binding}"
                                Foreground="White" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ItemsControl
            ItemContainerStyle="{StaticResource DiagramInteractorNamePresenterStyle}"
            ItemsPanel="{StaticResource StackItemsPanelTemplate}"
            ItemsSource="{Binding ActiveDiagramInteractorNames}"
            Visibility="{Binding ShowDebugInfo, Converter={StaticResource Btv}}" />
        <ItemsControl
            ItemContainerStyle="{StaticResource DiagramInteractorPresenterStyle}"
            ItemsPanel="{StaticResource CanvasItemsPanelTemplate}"
            ItemsSource="{Binding ActiveDiagramInteractors}" />
    </Grid>
</UserControl>