<UserControl
    x:Class="Diiagramr.Diagram.WireView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:diagram="clr-namespace:Diiagramr.Diagram"
    xmlns:s="https://github.com/canton7/Stylet">
    <UserControl.Resources>
        <diagram:PointsToPathConverter x:Key="PointsToPathConverter" />
    </UserControl.Resources>

    <Path
        Data="{Binding Points, Converter={StaticResource ResourceKey=PointsToPathConverter}}"
        MouseDown="{s:Action WireMouseDown}"
        StrokeLineJoin="Miter"
        StrokeMiterLimit="1"
        StrokeThickness="4">
        <Path.Style>
            <Style TargetType="{x:Type Path}">
                <Setter Property="Stroke" Value="{Binding LineColorBrush}" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Stroke" Value="#883333" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Path.Style>
    </Path>
</UserControl>
