<Window x:Class="Diiagramr.View.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Color Organ V5.0" Height="350" Width="525"
        xmlns:s="https://github.com/canton7/Stylet"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:viewModel1="clr-namespace:Diiagramr.ViewModel"
        MouseDown="{s:Action ShellMouseDown}"
        d:DataContext="{d:DesignInstance viewModel1:ShellViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
                <MenuItem Header="File">
                    <MenuItem Header="New" Command="{s:Action CreateProject}"></MenuItem>
                    <MenuItem Header="Open" Command="{s:Action UpdateProjectNamesInProjectDirectory}" ItemsSource="{Binding ProjectNamesInProjectDirectory}">
                        <MenuItem.ItemTemplate>
                            <DataTemplate DataType="{x:Type system:String}">
                                <MenuItem Command="{s:Action LoadProject}" CommandParameter="{Binding}" Header="{Binding}"></MenuItem>
                            </DataTemplate>
                        </MenuItem.ItemTemplate>
                    </MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Save" Command="{s:Action SaveProject}"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Close" Command="{s:Action Close}"></MenuItem>
                </MenuItem>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="175"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <ContentControl s:View.Model="{Binding ProjectExplorerViewModel}"></ContentControl>
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
                <ContentControl Grid.Column="2" s:View.Model="{Binding DiagramWellViewModel}"/>
            </Grid>
        </DockPanel>
        <Border Grid.Row="1" Grid.Column="1" Margin="5" BorderThickness="1" BorderBrush="SlateGray" Background="WhiteSmoke" Visibility="{Binding SavePromptVisible}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" TextAlignment="Center" VerticalAlignment="Center">Save before closing?</TextBlock>
                <Button Grid.Column="0" Grid.Row="1" Margin="5" Content="Yes" Command="{s:Action SaveAndClose}"></Button>
                <Button Grid.Column="1" Grid.Row="1" Margin="5" Content="No" Command="{s:Action DoNotSaveAndClose}"></Button>
                <Button Grid.Column="2" Grid.Row="1" Margin="5" Content="Cancel" Command="{s:Action CancelClose}"></Button>
            </Grid>
        </Border>
    </Grid>
</Window>

